{% extends 'base.html.twig' %}

{% block title %}PLAYLISTRUNNER{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>From which app you want to grab the playlist?</h2>
            </div>

            <div class="col-6 text-center">
                <p>FROM</p>

                <div class="col-4 text-center">
                    <a href="{{ path('app_platform_pick', {'platform': 'spotify'}) }}">
                        <button class="btn btn-success" type="button">Spotify</button>
                    </a></div>
                <div class="col-4 text-center">
                    <a href="{{ path('app_platform_pick', {'platform': 'deezer'}) }}">
                        <button class="btn btn-warning" type="button">Deezer</button>
                    </a></div>
                <div class="col-4 text-center">
                    <a href="{{ path('app_platform_pick', {'platform': 'applemusic'}) }}">
                        <button class="btn btn-primary" type="button">Apple Music</button>
                    </a></div>
                <div id="fromFormPath"></div>
            </div>

            <div class="col-6 text-center">
                <p>TO</p>
                <div id="toFormPath"></div>
                <div id="finalContent"></div>
            </div>
        </div>
    </div>


{% endblock %}
