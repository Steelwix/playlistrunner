<turbo-stream action="update" target="fromFormPath">
    <template>
        <div class="col-12 text-center mt-5">
<h2 style="color:white">Go on the playlist you want, copy the "Share link" and paste it here</h2>

        <div class="form-container">
            {% if error  is defined %}
                <p class="spotify-negative-color">Spotify returns no playlist with this share link, check if it's correct</p>
            {% endif %}
            <form id="linkForm" action="{{ path('app_spotify_get_link') }}">
                <input {% if error is defined %}style="background-color:#FFCCCC"{% endif %} type="text" name="playlistLink" placeholder="Enter your playlist link" {% if content is defined %}value="{{ content }}"{% endif %}>
                <button  class="spotify-color submit-textglitch platform-button mt-2" type="submit">Submit</button>
            </form>
        </div></div>
    </template>
</turbo-stream>