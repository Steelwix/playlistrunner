<turbo-stream action="update" target="fromFormPath">
    <template>
        <div class="col-8 justify-content-center mt-5">
        <h3> {{ playlist.name }}</h3>
        <img  class="img-fluid" src="{{ playlist.images.0.url }}">
        </div>
        <div class="col-6 justify-content-center mt-5">

            <a href="{{ path('app_account_platform_pick', {'platform': 'spotify', 'playlistId':playlist.id}) }}">
                <button class="spotify-color yes-textglitch platform-button m-2" type="button">Yes, it's this one</button>
            </a>

            <a href="{{ path('app_platform_pick', {'platform': 'spotify'}) }}">
                <button class="spotify-negative-color no-textglitch platform-button m-2" type="button">No, wrong one</button>
            </a></div>
    </template>
</turbo-stream>